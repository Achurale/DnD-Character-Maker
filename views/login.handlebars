<div class="row justify-content-center">
  <h2 class="text-center">Login</h2>

  <div class="col-auto p-4">
    <form class="form login-form">
      <div class="form-group p-1">
        <label for="email-login" class="fw-bold">Email</label>
        <input class="form-input" type="text" id="email-login" />
      </div>

      <div class="form-group p-1">
        <label for="password-login" class="fw-bold">Password</label>
        <input class="form-input" type="password" id="password-login" />
      </div>

      <div class="form-group text-center p-1">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>